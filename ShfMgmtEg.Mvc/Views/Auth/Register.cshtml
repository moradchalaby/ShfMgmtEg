@model ShfMgmtEg.Mvc.Models.RegisterModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @if (string.IsNullOrEmpty(Model.ErrorMessage) == false)
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }
            <h2>Register</h2>
            <form asp-controller="Auth" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.UserName"></label>
                    <input asp-for="@Model.UserName" class="form-control"/>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control"/>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Address"></label>
                    <input asp-for="@Model.Address" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword"></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control"/>
                </div>
                
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-route="Login" class="btn btn-link">Login</a>
            </form>
        </div>

    </div>
</div>